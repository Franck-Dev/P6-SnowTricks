{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitilisation du mot de passe{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-5 bg-light mt-5 p-5 border border-dark">
        <h2 class="text-center mb-4">Réinitilisation du mot de passe</h2>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group text-center">
            <button type="submit" class="btn btn-success">Modifier le mot de passe</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
