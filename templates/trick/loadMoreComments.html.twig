        <div class="userImage col-2">
            <img src="{{ comment.user.imageUrl }}" width="60px" alt="comment.user.username">
        </div>
        <p class="col-10">
            <strong>{{ comment.user.username }}</strong> <small class="text-muted">({{ comment.createdAt | date('d/m/Y Ã  H:i') }}) :</small>
            <br>{{ comment.content }}
        </p>
    </div>
{% endfor %}